<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="4dp"

    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


        android:id="@+id/postListItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:animateLayoutChanges="true"

        android:padding="4dp">


        <!-- Bottom View Start-->
        <LinearLayout
            android:id="@+id/swipeLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Bottom View End-->

            <!-- Surface View Start -->


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/postListItemSurface"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/recommend_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp">

                    <ImageView
                        android:id="@+id/postRecThumbUp"
                        android:layout_width="24dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:src="@drawable/thumb_up" />

                    <TextView
                        android:id="@+id/recommend_author"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:text="\@user"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/postRecThumbUp" />

                    <TextView
                        android:id="@+id/recommend_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:text="Recommendation text"

                        android:textColor="#222"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:layout_below="@+id/recommend_author" />

                    <TextView
                        android:id="@+id/recommend_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:text="#aaaaa"
                        android:textColor="@android:color/black"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/post_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/recommend_info">

                    <ImageView
                        android:id="@+id/avatar"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/account_box" />


                    <TextView
                        android:id="@+id/author"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_alignTop="@+id/avatar"
                        android:layout_toEndOf="@+id/avatar"
                        android:layout_toRightOf="@+id/avatar"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingStart="@dimen/activity_horizontal_margin"
                        android:text="\@user"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/post_id"
                        android:text="2016/02/07 Ð² 12:05"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/post_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/avatar"
                        android:text="#aaaaa"

                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />



                    <im.point.torgash.daspoint.widgets.FlowLayout
                        android:id="@+id/tags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/avatar"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="4dp">


                        <include layout="@layout/tag" />
                    </im.point.torgash.daspoint.widgets.FlowLayout>

                </RelativeLayout>
            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/swipeLL"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/post_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:scrollbars="none"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnComments"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:drawableLeft="@drawable/comment"
                    android:minHeight="48dp"
                    android:text="72"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"

                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>




