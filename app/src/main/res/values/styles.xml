<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppThemeLight">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="BrandButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>

    <style name="drawable_xml_light" >

        <item name="android:color">@color/xml_drawable_fillcolor_theme_light</item>
    </style>
    <!--Here the light theme styles are defined-->
    <style name="CardViewStyleLight" parent="CardView.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>
    <style name="GeneralTextViewStyleLight" parent="TextAppearance.AppCompat">

        <item name="android:autoLink">web</item>
        <item name="android:linksClickable">true</item>
        <item name="android:scrollbars">none</item>
        <item name="android:textColor">@color/text_color_theme_light</item>

    </style>
    <style name="CommentIconDrawableLight">
        <item name="android:src">@drawable/comment_black</item>
    </style>
    <style name="CommentIconTextLight">
        <item name="android:textColor">@color/text_color_theme_light</item>
    </style>
    <style name="CommentButtonBackgroundDrawableSubFalseLight">
        <item name="android:background">@drawable/button_white</item>
    </style>
    <style name="CommentButtonBackgroundDrawableSubTrueLight">
        <item name="android:background">@drawable/button_green</item>
    </style>
    <!--Here the dark theme styles are defined-->
    <style name="CardViewStyleDark" parent="CardView.Dark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>
    <style name="GeneralTextViewStyleDark" parent="TextAppearance.AppCompat">

        <item name="android:autoLink">web</item>
        <item name="android:linksClickable">true</item>

        <item name="android:scrollbars">none</item>
        <item name="android:textColor">@color/text_color_theme_dark</item>

    </style>
    <style name="CommentIconDrawableDark">
        <item name="android:src">@drawable/comment_white</item>
    </style>
    <style name="CommentIconTextDark">
        <item name="android:textColor">@color/text_color_theme_dark</item>
    </style>
    <style name="CommentButtonBackgroundDrawableSubFalseDark">
        <item name="android:background">@drawable/button_dark</item>
    </style>
    <style name="CommentButtonBackgroundDrawableSubTrueDark">
        <item name="android:background">@drawable/button_green_dark</item>
    </style>
</resources>
