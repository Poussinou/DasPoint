<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--This is the light theme-->
    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="CardViewStyle">@style/CardViewStyleLight</item>
        <item name="GeneralTextViewStyle">@style/GeneralTextViewStyleLight</item>
        <item name="CommentIconDrawable">@style/CommentIconDrawableLight</item>
        <item name="CommentIconText">@style/CommentIconTextLight</item>
        <item name="CommentButtonBackgroundDrawableSubFalse">@style/CommentButtonBackgroundDrawableSubFalseLight</item>
        <item name="CommentButtonBackgroundDrawableSubTrue">@style/CommentButtonBackgroundDrawableSubTrueLight</item>
        <item name="CommentButtonBackgroundDrawable">@drawable/button_white</item>
    </style>
    <!--This is the dark theme-->
    <style name="AppThemeDark" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="CardViewStyle">@style/CardViewStyleDark</item>
        <item name="GeneralTextViewStyle">@style/GeneralTextViewStyleDark</item>
        <item name="CommentIconDrawable">@style/CommentIconDrawableDark</item>
        <item name="CommentIconText">@style/CommentIconTextDark</item>
        <item name="CommentButtonBackgroundDrawableSubFalse">@style/CommentButtonBackgroundDrawableSubFalseDark</item>
        <item name="CommentButtonBackgroundDrawableSubTrue">@style/CommentButtonBackgroundDrawableSubTrueDark</item>
        <item name="CommentButtonBackgroundDrawable">@drawable/button_dark</item>
    </style>
</resources>