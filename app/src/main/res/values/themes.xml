<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--This is the light theme-->
    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="CardViewStyle">@style/CardViewStyleLight</item>
        <item name="GeneralTextViewStyle">@style/GeneralTextViewStyleLight</item>
    </style>
    <!--This is the dark theme-->
    <style name="AppThemeDark" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="CardViewStyle">@style/CardViewStyleDark</item>
        <item name="GeneralTextViewStyle">@style/GeneralTextViewStyleDark</item>
    </style>
</resources>